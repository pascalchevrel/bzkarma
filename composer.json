{
    "name": "pchevrel/bzkarma",
    "description": "Uplift scoring library for bugzilla.mozilla.org",
    "license": "MIT",
    "keywords": ["bugzilla", "firefox"],
    "authors": [
        {
            "name": "Pascal Chevrel",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "BzKarma\\": "src/pchevrel/BzKarma"
        }
    },
    "require-dev": {
        "pestphp/pest": "^3.5"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
